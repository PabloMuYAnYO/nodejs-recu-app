<div class="container p-4">
    <div class="row">
        {{#each aulas}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title text-uppercase">{{title}}</h3>
                    <img class="card-img-top" src="{{url}}"></img>
                    <p class="m-2">{{description}}</p>
                    <p>{{timeago created_at}}</p>
                    <a class="btn btn-danger" href="/aulas/delete/{{id}}">Borrar Aula</a>
                    <a class="btn btn-secondary" href="/aulas/edit/{{id}}">Editar</a>
                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay aulas añadidas aún.</p>
                <a href="/aulas/add">Añade una.</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>